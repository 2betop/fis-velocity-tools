<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>RewriteFilter</filter-name>
        <filter-class>com.baidu.fis.filter.RewriteFilter</filter-class>
    </filter>
    <filter>
        <filter-name>MockFilter</filter-name>
        <filter-class>com.baidu.fis.filter.MockFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RewriteFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MockFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.vm</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>velocity</servlet-name>
        <servlet-class>com.baidu.fis.velocity.servlet.Preview</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>velocity</servlet-name>
        <url-pattern>*.vm</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>com.baidu.fis.servlet.Upload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.vm</welcome-file>
    </welcome-file-list>

    <jsp-config>
        <taglib>
            <taglib-uri>/fis</taglib-uri>
            <taglib-location>/WEB-INF/fis.tdl</taglib-location>
        </taglib>
    </jsp-config>
</web-app>